{
   "compilerOptions": {
      "outDir": "build",
      // "removeComments": true,
      "lib": [
         "ES2015",
         "ES2015.Collection",
         "ES2015.Core",
         "ES2015.Generator",
         "ES2015.Iterable",
         "ES2015.Promise",
         "ES2015.Proxy",
         "ES2015.Reflect",
         "ES2015.Symbol",
         "ES2015.Symbol.WellKnown",
         "ES2016",
         "ES2016.Array.Include",
         "ES2017",
         "ES2017.Object",
         "ES2017.Intl",
         "ES2017.SharedMemory",
         "ES2017.String",
         "ES2017.TypedArrays"
      ],
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "rootDir": "src",
      "sourceMap": true,
      "strict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "target": "ES2017",
      "declaration": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules"],
   "typeAcquisition": {
      "enable": true
   }
}
